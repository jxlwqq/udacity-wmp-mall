/* pages/home/home.wxss */

.hot-card {
  background-color: #fff;
  position: relative;
  margin: 32rpx 52rpx 0;
  height: 326rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0,0, 0.02);
  border-radius: 13rpx;
}

.hot-name {
  position: absolute;
  display: flex;
  align-items: center;
  left: 44rpx;
  top: 41rpx;
  width: 300rpx;
}

.hot-name-text {
  font-size: 28rpx;
  margin: 0 20rpx;
  color: #34373D;
  font-weight: bold;
}
.hot-name-line {
  width: 24rpx;
  height: 39rpx;
}


.hot-info {
  width: 259rpx;
  height: 188rpx;
  position: absolute;
  bottom: 0;
  left: 44rpx;
}
.hot-image {
  width: 241rpx;
  height: 241rpx;
  position: absolute;
  right: 47rpx;
  top: 53rpx;
}

.list-title {
  margin: 90rpx 0 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list-title-line {
    width: 24rpx;
  height: 39rpx; 
}

.list-title-text {
   font-size: 28rpx;
  margin: 0 20rpx;
  font-weight: bold;
}


.product-row {
  display: flex;
  justify-content: space-around; 
  margin: 0 52rpx 28rpx;
}
 .product-card {
  flex: 1;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}
 .product-card:first-child {
  margin-right: 27rpx;
}
 .product-image {
  width: 100%;
  border-radius: 13rpx 13rpx 0 0;
}
 .product-name {
  margin: 0 21rpx;
  font-size: 28rpx;
  color: rgba(29, 29, 38, 0.8);
  line-height: 40rpx;
}
 .product-meta {
  display: flex;
  align-items: center;
  margin: 9rpx 21rpx 15rpx;
}
 .product-money,
.product-add {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 50%;
  color: #34373D;
  font-weight: 900;
  background: #F7E687;
}
 .product-money {
  font-size: 24rpx;
}
 .product-add {
  font-size: 32rpx;
}
 .product-price {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
} 